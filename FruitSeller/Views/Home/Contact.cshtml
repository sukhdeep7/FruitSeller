<!-- contact -->

<section class="contact" id="contact">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-7 col-md-6 contact-form-txt">
                <form action="PostMessage" method="post">
                    <div class="form-group contact-forms">
                        <input type="text"  name="txtName" class="form-control" placeholder="Name" required="">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="email" name="txtEmail" class="form-control" placeholder="Email" required="">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="text" name="txtPhone" class="form-control" placeholder="Phone" required="">
                    </div>
                    <div class="form-group contact-forms">
                        <textarea class="form-control" name="txtMessage" placeholder="Message" rows="3" required=""></textarea>
                    </div>
                    <input type="submit" class="btn sent-butnn" value="send Message ">
                </form>
            </div>
            <div class="col-md-5 contact-grided-right">
                <h5 class="top-title mb-lg-4 mb-3 text-center">Contact Us</h5>
                <h3 class="title mb-lg-5 mb-md-4 mb-sm-4 mb-3 text-center">Get In Touch</h3>
                <div class=" footer-top text-center">
                    <p>
                        <span>Address</span> : Papatoe
                        <br>New Zealand.
                    </p>
                    <p class="pt-lg-3 pt-2">
                        <span> Phone</span> : +(64) 654 4565 32
                    </p>
                    <p class="pt-lg-3 pt-2">
                        <span>Email</span> :
                        <a href="mailto:info@example.com">admin@admin.com</a>
                    </p>
                </div>


            </div>
        </div>
    </div>
</section>
